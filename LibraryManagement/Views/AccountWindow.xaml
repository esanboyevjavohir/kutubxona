<Window x:Class="LibraryManagement.Views.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.Views"
        mc:Ignorable="d"
        Title="AccountWindow" Height="450" Width="800">
    <Grid>
        <Button
            Content="Edit"
            Width="150"
            Height="50"
            Background="Coral"
            Foreground="White"
            FontSize="15"
            Margin="0 0 0 300"
            Click="OnClickEdit"/>

        <Button
            Content="History"
            Width="150"
            Height="50"
            Background="ForestGreen"
            Foreground="White"
            FontSize="15"
            Click="HistoryClicked"/>

        <Button
            Content="Log Out"
            Width="150"
            Height="50"
            Background="DarkRed"
            Foreground="White"
            FontSize="15"
            Margin="0 300 0 0"
            Click="LogOutClicked"/>
    </Grid>
</Window>
